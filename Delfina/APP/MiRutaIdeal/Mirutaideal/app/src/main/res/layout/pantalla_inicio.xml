<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_camino_frances_pantalla_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#044474"
            android:fontFamily="@font/font_inter"
            android:text="@string/boton_primer_camino"
            android:textColor="@color/white"
            app:backgroundTint="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.183"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_camino_del_norte_pantalla_inicio" />

        <Button
            android:id="@+id/button_camino_primitivo_pantalla_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#044474"
            android:fontFamily="@font/font_inter"
            android:text="@string/boton_segundo_camino"
            android:textColor="@color/white"
            app:backgroundTint="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.191"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_camino_frances_pantalla_inicio" />

        <Button
            android:id="@+id/button_camino_del_norte_pantalla_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="#044474"
            android:fontFamily="@font/font_inter"
            android:text="@string/boton_tercer_camino"
            android:textColor="@color/white"
            app:backgroundTint="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.185"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/BackgroundFirstScreen" />

        <View
        android:id="@+id/rectangle_at_the_top2"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:background="#044373"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


        <View
            android:id="@+id/rectangle_at_the_bottom2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
        android:id="@+id/icon_menu"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/menu_icon_description"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top2"
        app:layout_constraintHorizontal_bias="0.044"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_menu_foreground" />

    <ImageButton
        android:id="@+id/icon_profile"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/profile_icon_description"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top2"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toEndOf="@+id/icon_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_profile_foreground" />

    <ImageButton
        android:id="@+id/icon_map"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/map_icon_description"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom2"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_map_foreground" />

    <ImageButton
        android:id="@+id/icon_add"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/add_icon_description"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon_map"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_add_foreground" />

    <ImageButton
        android:id="@+id/icon_route"
        android:layout_width="55dp"
        android:layout_height="48dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="24dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/search_icon_description"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom2"
        app:layout_constraintStart_toEndOf="@+id/icon_map"
        app:srcCompat="@mipmap/ic_route_white_foreground" />

    <Switch
        android:id="@+id/estoy_en_camino_button"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/font_inter"
        android:text="@string/estoy_en_camino"
        android:textColor="@color/backgroundBottomBarColor"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.061"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top2"
        app:srcCompat="@mipmap/ic_switch_foreground" />


        <ImageView
            android:id="@+id/BackgroundFirstScreen"
            android:layout_width="416dp"
            android:layout_height="216dp"
            android:layout_marginTop="92dp"
            android:contentDescription="@string/image_description"
            android:scaleType="fitXY"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top2"
            android:src="@drawable/image"
            tools:visibility="visible" />

        <Button
            android:id="@+id/button_comenzar_ruta"
            android:layout_width="220dp"
            android:layout_height="48dp"
            android:background="@color/iconBottomBarColorSelected"
            android:fontFamily="@font/font_inter"
            android:text="@string/comienza_tu_ruta"
            android:textColor="@color/backgroundBottomBarColor"
            app:backgroundTint="@color/iconBottomBarColorSelected"
            app:layout_constraintBottom_toBottomOf="@+id/BackgroundFirstScreen"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.911"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/BackgroundFirstScreen"
            app:layout_constraintVertical_bias="0.934" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>