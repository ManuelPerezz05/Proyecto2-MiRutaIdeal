<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_configuracion"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_at_the_top4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/return_button_configuracion"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@color/backgroundBottomBarColor"
            android:contentDescription="@string/return_button"
            android:scaleType="centerCrop"
            android:text="@string/return_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_return_button_foreground" />

        <TextView
            android:id="@+id/configuracion_text"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/configuracion"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top4" />


        <View
            android:id="@+id/background_rectangle_option1"
            android:layout_width="260dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="44dp"
            android:background="#E6E6E6"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/configuracion_text" />

        <TextView
            android:id="@+id/idioma_configuracion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/idioma"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/background_rectangle_option1"
            app:layout_constraintHorizontal_bias="0.116"
            app:layout_constraintStart_toStartOf="@+id/background_rectangle_option1"
            app:layout_constraintTop_toTopOf="@+id/background_rectangle_option1" />

        <View
            android:id="@+id/background_rectangle_option2"
            android:layout_width="260dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="#E6E6E6"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_rectangle_option1" />

        <TextView
            android:id="@+id/info_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/informacion_perfil"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/background_rectangle_option2"
            app:layout_constraintHorizontal_bias="0.328"
            app:layout_constraintStart_toStartOf="@+id/background_rectangle_option2"
            app:layout_constraintTop_toTopOf="@+id/background_rectangle_option2" />

        <View
            android:id="@+id/background_rectangle_option3"
            android:layout_width="260dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="#E6E6E6"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_rectangle_option2" />

        <TextView
            android:id="@+id/privacidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/privacy"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/background_rectangle_option3"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="@+id/background_rectangle_option3"
            app:layout_constraintTop_toTopOf="@+id/background_rectangle_option3" />

        <View
            android:id="@+id/background_rectangle_option4"
            android:layout_width="260dp"
            android:layout_height="59dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="#E6E6E6"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/background_rectangle_option3" />

        <TextView
            android:id="@+id/soporte_tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/soporte_tecnico"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/background_rectangle_option4"
            app:layout_constraintHorizontal_bias="0.194"
            app:layout_constraintStart_toStartOf="@+id/background_rectangle_option4"
            app:layout_constraintTop_toTopOf="@+id/background_rectangle_option4" />

        <View
            android:id="@+id/rectangle_at_the_bottom3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_configuracion"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil_configuracion"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>