<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_detalles_restaurante"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_at_the_top4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/icon_menu_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/menu_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@mipmap/ic_menu_foreground" />


        <ImageButton
            android:id="@+id/icon_home_page_button_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_at_the_top4"
            app:layout_constraintEnd_toStartOf="@+id/icon_profile_detalles_restaurante"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_detalles_restaurante"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.571"
            app:srcCompat="@mipmap/ic_home_page_foreground" />

        <ImageButton
            android:id="@+id/icon_profile_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/profile_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_detalles_restaurante"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_profile_foreground" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="38dp"
            android:layout_marginBottom="28dp"
            android:src="@mipmap/ic_new_map_foreground"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.068"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_restaurante"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/restaurante_nombre"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top4" />

        <ImageView
            android:id="@+id/imagen_restaurante"
            android:layout_width="295dp"
            android:layout_height="181dp"
            android:layout_marginTop="104dp"
            android:scaleType="fitStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.224"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top4"
            app:srcCompat="@drawable/restaurant1"></ImageView>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="360dp"
            android:layout_height="36dp"
            android:layout_marginTop="112dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/direccion_restaurante"
            android:textColor="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.686"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagen_restaurante" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/telef_restaurante"
            android:textColor="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.557"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:src="@drawable/baseline_phone_24"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.676"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <View
            android:id="@+id/rectangle_at_the_bottom3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/icon_map_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="176dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/map_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_map_foreground" />

        <ImageButton
            android:id="@+id/icon_add_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_map_detalles_restaurante"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_add_foreground" />

        <ImageButton
            android:id="@+id/icon_route_detalles_restaurante"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/search_icon_description"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintStart_toEndOf="@+id/icon_map_detalles_restaurante"
            app:srcCompat="@mipmap/ic_route_white_foreground"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_detalles_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil_detalles_restaurante"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>