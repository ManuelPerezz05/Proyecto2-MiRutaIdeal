<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_camino_frances"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_at_the_top4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/icon_menu_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/menu_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@mipmap/ic_menu_foreground" />

        <ImageButton
            android:id="@+id/icon_home_page_button_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_at_the_top4"
            app:layout_constraintEnd_toStartOf="@+id/icon_profile_camino_frances"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_camino_frances"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_home_page_foreground" />


        <ImageButton
            android:id="@+id/icon_profile_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/profile_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_camino_frances"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_profile_foreground" />


        <TextView
            android:id="@+id/text_camino_frances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/camino_frances"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top4" />

        <ImageView
            android:id="@+id/caminoFrancesImage"
            android:layout_width="276dp"
            android:layout_height="169dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_camino_frances"
            app:srcCompat="@drawable/caminofrances" />

        <TextView
            android:id="@+id/etapas_camino_frances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/etapas"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/caminoFrancesImage" />

        <Button
            android:id="@+id/button_mostrar_mapa_camino_frances"
            android:layout_width="219dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="#044474"
            android:fontFamily="@font/font_inter"
            android:text="@string/mira_la_ruta_en_el_mapa"
            android:textColor="@color/white"
            app:backgroundTint="@color/backgroundBottomBarColor"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.817"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/dificultad_camino_frances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/dificultad_media_alta"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.138"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etapas_camino_frances" />

        <TextView
            android:id="@+id/distancia_camino_frances"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/distancia_frances"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dificultad_camino_frances" />

        <View
            android:id="@+id/rectangle_at_the_bottom3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/icon_map_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="176dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/map_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_map_foreground" />

        <ImageButton
            android:id="@+id/icon_add_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="28dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_map_camino_primitivo"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_add_foreground" />

        <ImageButton
            android:id="@+id/icon_route_camino_frances"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/search_icon_description"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintStart_toEndOf="@+id/icon_map_camino_frances"
            app:srcCompat="@mipmap/ic_route_white_foreground"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_camino_frances"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil_camino_frances"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>