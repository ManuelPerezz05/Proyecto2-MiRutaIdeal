<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_hospedaje"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_at_the_top4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/icon_menu_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/menu_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@mipmap/ic_menu_foreground" />

        <ImageButton
            android:id="@+id/icon_home_page_button_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_at_the_top4"
            app:layout_constraintEnd_toStartOf="@+id/icon_profile_hospedaje"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_hospedaje"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_home_page_foreground" />


        <ImageButton
            android:id="@+id/icon_profile_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/profile_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_hospedaje"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_profile_foreground" />

        <TextView
            android:id="@+id/hospedaje_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/hospedaje_y_albergues"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/selecciona_fecha"
            android:textColor="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hospedaje_text" />

        <ImageButton
            android:id="@+id/dropdown_date"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:background="#F8F8F8"
            android:contentDescription="@string/selecciona_fecha"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintTop_toBottomOf="@+id/hospedaje_text"
            app:srcCompat="@drawable/baseline_arrow_drop_down_24" />

        <View
            android:id="@+id/rectangle_at_the_bottom3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/icon_map_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="176dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/map_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_map_foreground" />

        <ImageButton
            android:id="@+id/icon_add_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_map_hospedaje"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_add_foreground" />

        <ImageButton
            android:id="@+id/icon_route_hospedaje"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/search_icon_description"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintStart_toEndOf="@+id/icon_map_hospedaje"
            app:srcCompat="@mipmap/ic_route_white_foreground"
            tools:visibility="visible" />

        <ScrollView
            android:id="@+id/scrollView_hospedaje"
            android:layout_width="414dp"
            android:layout_height="422dp"
            android:contentDescription="@string/searchbar_scrolling_view_behavior"
            android:hint="@string/searchbar_scrolling_view_behavior"
            android:text="@string/searchbar_scrolling_view_behavior"
            app:layout_constraintBottom_toTopOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropdown_date">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/hotel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:srcCompat="@drawable/hotel1">
                </ImageView>


                <Button
                    android:id="@+id/button_mostrar_info_hotel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundBottomBarColor"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="160dp"
                    android:text="@string/mostrar_info" />

                <ImageView
                    android:id="@+id/hotel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    app:srcCompat="@drawable/hotel2" />
                <Button
                    android:id="@+id/button_mostrar_info_hotel2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundBottomBarColor"
                    android:layout_marginTop="-40dp"
                    android:layout_marginStart="160dp"
                    android:text="@string/mostrar_info" />


                <ImageView
                    android:id="@+id/hotel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/hotel1" />

                <Button
                    android:id="@+id/button_mostrar_info_hotel3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/backgroundBottomBarColor"
                    android:layout_marginTop="-60dp"
                    android:layout_marginStart="160dp"
                    android:text="@string/mostrar_info" />

            </LinearLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_hospedaje"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil_hospedaje"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>