<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_ayudas"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/rectangle_at_the_top4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/icon_menu_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/menu_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            app:srcCompat="@mipmap/ic_menu_foreground" />

        <ImageButton
            android:id="@+id/icon_home_page_button_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_at_the_top4"
            app:layout_constraintEnd_toStartOf="@+id/icon_profile_ayudas"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_ayudas"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_home_page_foreground" />


        <ImageButton
            android:id="@+id/icon_profile_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/profile_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_top4"
            app:layout_constraintHorizontal_bias="0.943"
            app:layout_constraintStart_toEndOf="@+id/icon_menu_ayudas"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_profile_foreground" />

        <TextView
            android:id="@+id/ayudas_text"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/font_inter"
            android:text="@string/ayuda_y_consejos"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="30sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_at_the_top4" />

        <TextView
            android:id="@+id/text_preguntes_freq"
            android:layout_width="146dp"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:autofillHints=""
            android:ems="10"
            android:fontFamily="@font/font_inter"
            android:text="@string/preguntas_freq"
            android:textColor="@color/backgroundBottomBarColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ayudas_text" />

        <TextView
            android:id="@+id/pregunta1"
            android:layout_width="188dp"
            android:layout_height="51dp"
            android:layout_marginTop="32dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/font_inter"
            android:text="@string/pregunta1"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_preguntes_freq" />

        <TextView
            android:id="@+id/pregunta2"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/font_inter"
            android:text="@string/pregunta2"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregunta1" />

        <TextView
            android:id="@+id/pregunta3"
            android:layout_width="305dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/font_inter"
            android:text="@string/pregunta3"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregunta2" />

        <TextView
            android:id="@+id/pregunta4"
            android:layout_width="285dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/font_inter"
            android:text="@string/pregunta4"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregunta3" />

        <TextView
            android:id="@+id/pregunta5"
            android:layout_width="285dp"
            android:layout_height="49dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/btn_dropdown"
            android:fontFamily="@font/font_inter"
            android:text="@string/pregunta5"
            android:textColor="@color/backgroundBottomBarColor"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.126"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pregunta4" />

        <View
            android:id="@+id/rectangle_at_the_bottom3"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_alignParentTop="true"
            android:background="#044373"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/icon_map_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="176dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/map_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintHorizontal_bias="0.011"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_map_foreground" />

        <ImageButton
            android:id="@+id/icon_add_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/add_icon_description"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_map_ayudas"
            app:layout_constraintHorizontal_bias="0.316"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@mipmap/ic_add_foreground" />

        <ImageButton
            android:id="@+id/icon_route_ayudas"
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_marginStart="52dp"
            android:layout_marginBottom="24dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/search_icon_description"
            android:scaleType="centerInside"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_at_the_bottom3"
            app:layout_constraintStart_toEndOf="@+id/icon_map_ayudas"
            app:srcCompat="@mipmap/ic_route_white_foreground"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_ayudas"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"/>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_perfil_ayudas"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/profile_nav_header"
        app:menu="@menu/perfil_menu"
        android:layout_gravity="end"
        android:fitsSystemWindows="true" />
</androidx.drawerlayout.widget.DrawerLayout>